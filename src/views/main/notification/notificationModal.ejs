<div class="modal fade" id="notificationsModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tất cả thông báo.</h4>
            </div>
            <div class="modal-body">
                <div class="modal-button-bar">
                    <a href="javascript:void(0)" id="modal-mark-notifications-as-read">Đánh dấu tất cả là đã đọc</a>
                </div>
                <ul class="list-notifications">
                    <% if (!notifications.length) { %>
                        <li>
                            <div class="no-notifications">There are no notifications!</div>
                        </li>
                    <% } %>
                    <% notifications.forEach(function (notification) { %>
                        <li>
                            <%- notification %>
                        </li>
                    <% }); %>
                </ul>
                <div class="read-more-notifications">
                    <a href="javascript:void(0)" id="link-read-more-notifications">Xem thêm</a>
                </div>
                <div class="read-more-notifications-loader">
                    <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
                </div>
            </div>
        </div>
    </div>
</div>
